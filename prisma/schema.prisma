// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  cnpj         String @id @unique
  razao_social String @unique
  nome_contato String
  tel          String

  @@map("customers")
}

model Address {
  id          String  @id @default(uuid())
  logradouro  String
  complemento String?
  bairro      String
  cidade      String
  estado      String
  cep         String
  numero      Int

  @@map("addresses")
}
